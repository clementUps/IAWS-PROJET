<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<hibernate-mapping>

    <class name="univ.ups.iaws.Beans.Film" table="film">
        <id name="id" column="ID_FILM">
            <generator class="native"/>
        </id>
        <property name="imdbId" type="string" column="IMDB_ID"/>
        <property name="titre" type="string" column="TITRE"/>
        <property name="annee" type="integer" column="ANNEE"/>
    </class>

</hibernate-mapping>